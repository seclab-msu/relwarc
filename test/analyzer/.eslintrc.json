{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "node"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "google"
    ],
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", 100, {
            "ignoreStrings": true,
            "ignoreComments": true
        }],
        "complexity": ["error", 12],
        "max-depth": ["error", 5],
        "max-lines-per-function": ["error", 700],
        "max-params": ["error", 4],
        "require-jsdoc": "off",
        "arrow-parens": ["error", "as-needed"],
        "object-curly-spacing": ["error", "always"],
        "comma-dangle": "off",
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "one-var": "off",

        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/ban-types": ["error", {
            "types": {
                "object": false
            },
            "extendDefaults": true
        }],
        "@typescript-eslint/ban-ts-comment": "off"
    }
}